<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.community.petish.mypage.mapper.QuestionMapper">
	
	<resultMap type="com.community.petish.mypage.dto.QuestionRequestDTO" id="QuestionResultMap">
		<result property="id" column="ID" />
		<result property="title" column="TITLE" />
		<result property="content" column="CONTENT" />
		<result property="replied" column="REPLIED" />
		<result property="category" column="CATEGORY"/>
		<result property="user_id" column="USER_ID" />
		<result property="question_created_date" column="QUESTION_CREATED_DATE" />
		<result property="deleted" column="DELETED" />
	</resultMap>
	
	<!-- 문의 등록-->
	<insert id="insertQuestion" parameterType="com.community.petish.mypage.dto.QuestionResponseDTO">
		insert into QUESTION_TB (TITLE, CONTENT, USER_ID, CATEGORY_ID) values (#{title}, #{content}, #{user_id}, #{category_id})
	</insert>
	
	<!-- 문의 조회 -->
	<select id="getQuestionList" parameterType="int" resultMap="QuestionResultMap">
		SELECT q1.id, q1.title, q1.content, q1.replied, q2.category, q1.user_id, q1.question_created_date, deleted
		FROM question_tb q1, question_category_tb q2
		WHERE (q1.category_id=q2.id) and (q1.user_id = #{user_id}) order by id desc
	</select> 
	
	<!-- 문의 수정 -->
	<!-- <update id="modifyQuestion" parameterType="com.community.petish.mypage.dto.QuestionResponseDTO">
		UPDATE QUESTION_TB SET TITLE = #{title}, CONTENT = #{content} where ID=#{id}
	</update> -->
	
	<!-- 문의 삭제 -->
	<update id="deleteQuestion" parameterType="int">
		UPDATE QUESTION_TB SET DELETED = 1 WHERE ID=#{id}
	</update>
	
	<!-- 해당사용자 삭제되지 않은 문의 갯수 확인 -->
	<select id="getUndeleted" resultType="int" parameterType="int">
		SELECT COUNT (*) FROM QUESTION_TB WHERE DELETED = 0 and user_id = #{user_id}
	</select>
	
</mapper>